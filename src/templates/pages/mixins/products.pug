mixin products__header(title)
  .products__header.text--xl.text--600
    .products__text-header=title
    button.btn.btn--light-theme.btn--lg.text--title-sm
      i.fas.fa-chevron-left
    button.btn.btn--light-theme.btn--lg.text--title-sm
      i.fas.fa-chevron-right

mixin product__item(vendor, imageSrc, link, commentsCount, title, oldPrice, price)
  .products__vendor Артикул: 
    b=vendor
  a(href=link)
    img.products__image(src=imageSrc, alt="image")
  .products__functions
    .products__raiting
      i.fas.fa-star.products__star
      i.fas.fa-star.products__star
      i.fas.fa-star.products__star
      i.fas.fa-star.products__star
      i.fas.fa-star.products__star
      .products__comment-counter=commentsCount
    .products__heart
      i.fas.fa-heart
    .products__compare
      i.fas.fa-balance-scale
  a.products__title(href=link)=title
  .products__old-price=oldPrice
  .products__price.text--lg=price 
  .products__moved
    .products__counter
      button.btn.btn--light-theme.text--lg &minus;
      input.products__count-field(type="text")
      button.btn.btn--light-theme.text--lg &plus;
    .products__section
      button.btn.btn--orange-theme.products__buy-btn.text--xl Купить